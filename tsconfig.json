  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": false,
    "module": "es6",
    "target": "ES2016",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}